*
	margin:0
	padding:0
	outline:0
body  
	font: 12px Arial, Helvetica, sans-serif
	color: black
	background:#d4d4d4

#container
	width:1000px
	margin:0 auto
	border-left:1px solid gray
	border-right:1px solid gray
	
header
	background:#000
	color:white
	height:100px
	font-size:20px
	text-align:left
	line-height:100px
	padding:0 30px

#colors
	
	
#colors li
	list-style:none

	
#colors li a
	float:left
	margin-right:10px
	color:white
	width:20px
	height:15px
	margin-top:3px
	text-decoration:none
	text-align:center
	
div#chatside
	border:1px solid gray
	height:200px
	width:100%
	overflow:scroll
div#chatside ul li
	margin: 0 10px
	list-style:none
	border-bottom:1px dashed #d4d4d4
	padding:10px 0
div#content
	padding:30px	
	background:white
footer
	background:gray
	color:white
	height:100px
	line-height:100px
	font-size:12px
	padding:0 30px